<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".dialogs.DurationDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica"
                android:gravity="start"
                android:text="Select the duration"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp" />

            <RelativeLayout
                android:id="@+id/lay_imd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/rounded_corner_bg_white">

                <TextView
                    android:id="@+id/et_imd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black30Color"
                    android:text="immediately"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/rounded_corner_bg_white">

                <TextView
                    android:id="@+id/et_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black30Color"
                    android:text="10 minutes"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/rounded_corner_bg_white">

                <TextView
                    android:id="@+id/et_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_16sdp"
                    android:text="15 minutes"
                    android:textColor="@color/black30Color"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical" />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/appColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/helvetica_bold"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_16sdp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>